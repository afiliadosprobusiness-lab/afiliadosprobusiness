rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return signedIn() &&
        (
          request.auth.token.admin == true ||
          request.auth.token.email == "afiliadosprobusiness@gmail.com"
        );
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /cloned_sites/{siteId} {
      allow get, list: if isAdmin() || (signedIn() && resource.data.userId == request.auth.uid);

      allow create: if signedIn()
        && request.resource.data.userId == request.auth.uid;

      allow update: if (isAdmin() || (signedIn() && resource.data.userId == request.auth.uid))
        && request.resource.data.userId == resource.data.userId;

      allow delete: if isAdmin() || (signedIn() && resource.data.userId == request.auth.uid);
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
